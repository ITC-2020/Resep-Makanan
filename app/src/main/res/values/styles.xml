<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="my_recipes">
        <item name = "android:textSize">24dp</item>
        <item name="android:textColor">#7278A4</item>
    </style>

    <style name="what_do_you">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#54000000</item>
    </style>

    <style name="button_recipe">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#F4F1F2</item>
    </style>

    <dimen name="recipe_image_height">300dp</dimen>
    <dimen name="recipe_title_text_size">30sp</dimen>
    <dimen name="recipe_text_size">16sp</dimen>
    <dimen name="recipe_texthead_size">20sp</dimen>

</resources>